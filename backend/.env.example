# ========================================
# ডাটাবেস কনফিগারেশন
# ========================================
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=air_travel_agency

# ========================================
# সার্ভার কনফিগারেশন
# ========================================
PORT=5000
NODE_ENV=development

# ========================================
# JWT কনফিগারেশন
# ========================================
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=24h

# ========================================
# CORS কনফিগারেশন
# ========================================
CORS_ORIGIN=http://localhost:3000

# ========================================
# ইমেইল কনফিগারেশন (ভবিষ্যতের জন্য)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ========================================
# লগিং
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log